<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="user_prefs.xml" />
        <exclude domain="sharedpref" path="auth_prefs.xml" />
        <exclude domain="database" path="inbusiness.db" />
        <exclude domain="database" path="inbusiness.db-shm" />
        <exclude domain="database" path="inbusiness.db-wal" />
        <exclude domain="file" path="keystore" />
    </cloud-backup>

    <device-transfer>
        <!-- Allow transfer of non-sensitive data -->
        <include domain="sharedpref" path="settings.xml" />
    </device-transfer>
</data-extraction-rules>